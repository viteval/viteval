{
  "name": "viteval-workspace",
  "description": "Next generation LLM evaluation framework powered by Vitest.",
  "version": "1.0.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@changesets/cli": "^2.29.8",
    "@nx/js": "22.1.3",
    "@nx/plugin": "22.1.3",
    "@nx/vite": "22.1.3",
    "@nx/web": "22.1.3",
    "@nx/workspace": "^22.1.3",
    "@swc-node/register": "~1.11.1",
    "@swc/cli": "~0.7.9",
    "@swc/core": "~1.15.3",
    "@swc/helpers": "~0.5.17",
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "24.10.1",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "jiti": "2.6.1",
    "jsdom": "~27.2.0",
    "nuka-code": "^0.1.13",
    "nx": "22.1.3",
    "prettier": "^3.7.3",
    "syncpack": "^13.0.4",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.14.0",
  "private": true,
  "scripts": {
    "agents": "CI=true nx run-many --tui=false --parallel --projects=packages/* -t",
    "build": "nx run-many -t build --parallel --projects=packages/*",
    "build:docs": "nx run-many -t build --parallel --p docs",
    "check": "nx run-many -t check",
    "dev": "nx run-many -t dev --parallel --projects=packages/*",
    "dev:docs": "nx dev docs",
    "fix": "nx run-many -t fix",
    "gen": "nx generate",
    "nuke": "nuka-code",
    "publish": "pnpm run build && pnpm changeset publish",
    "sp": "syncpack",
    "test": "nx run-many -t test --parallel --projects=packages/*",
    "types": "nx run-many -t types --parallel",
    "types:packages": "nx run-many -t types --parallel --projects=packages/*",
    "types:examples": "nx run-many -t types --parallel --projects=examples/*",
    "version": "pnpm changeset version && pnpm install --no-frozen-lockfile"
  }
}
