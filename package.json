{
  "name": "viteval-workspace",
  "version": "1.0.0",
  "description": "LLM evaluation framework workspace - contains core, CLI, and main viteval packages",
  "private": true,
  "scripts": {
    "build": "nx run-many -t build",
    "dev": "nx run-many -t dev",
    "test": "nx run-many -t test",
    "types": "nx run-many -t types",
    "check": "biome check .",
    "fix": "biome check --write .",
    "publish": "pnpm run build && pnpm changeset publish",
    "version": "pnpm changeset version && pnpm install --no-frozen-lockfile",
    "validate": "nx run-many -t validate",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@changesets/cli": "^2.29.5",
    "@nx/js": "21.3.11",
    "@nx/plugin": "21.3.11",
    "@nx/vite": "21.3.11",
    "@nx/web": "21.3.11",
    "@nx/workspace": "^21.3.11",
    "@swc-node/register": "~1.10.10",
    "@swc/cli": "~0.7.8",
    "@swc/core": "~1.13.3",
    "@swc/helpers": "~0.5.11",
    "@tsconfig/node24": "^24.0.1",
    "@types/node": "24.2.1",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "jiti": "2.5.1",
    "jsdom": "~26.1.0",
    "nx": "21.3.11",
    "prettier": "^3.6.2",
    "tslib": "^2.3.0",
    "tsup": "^8.5.0",
    "typescript": "~5.9.2",
    "vite": "^7.1.2",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.14.0"
}