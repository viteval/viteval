{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "namedInputs": {
    "sharedGlobals": ["{workspaceRoot}/**/.env.*local"],
    "default": ["{projectRoot}/**/*", "sharedGlobals"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist/**"],
      "cache": true
    },
    "dev": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/coverage/**"],
      "cache": true
    },
    "check": {
      "dependsOn": ["^check"],
      "cache": true
    },
    "fix": {
      "dependsOn": ["^fix"],
      "cache": true
    },
    "types": {
      "dependsOn": ["^build", "^types"],
      "cache": true
    },
    "validate": {
      "cache": false
    },
    "@nx/js:tsc": {
      "cache": true,
      "dependsOn": ["^build"],
      "inputs": ["default", "^default"]
    },
    "@nx/vite:test": {
      "cache": true,
      "inputs": ["default", "^default"]
    }
  }
}
